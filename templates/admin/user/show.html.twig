{% extends 'base.html.twig' %}

{% block title %}Détail de l'utilisateur {{ user.username }}{% endblock %}

{% block body %}
    <style>
        .exmple-wraper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .exmple-wraper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <section class="container px-4">
        <div class="w-50 m-auto">
            <h1>Utilisateur : </h1>
            {% if user is not null %}
                <div class="card mb-1 m-auto">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <h4 class="mb-1">{{ user.username }}</h4>
                            <small class="text-muted">Identifiant : {{ user.id }}</small>
                        </div>
                        <p class="card-text">{{ user.email }}</p>
                        <h6 class="card-subtitle mb-2 text-body-secondary">{{ user.roles|join(', ', ' et ')}}</h6>
                    </div>
                </div>
            {% else %}
                <div>Utilisateur non trouvé</div>
            {% endif %}
            <div class="d-flex p-2">
                <a href="{{ path('app_admin_user_index') }}" class="btn btn-primary me-4">
                    <div class="d-flex justify-content-between align-items-center" style="width: 80px;">
                        <twig:ux:icon name="typcn:arrow-back" width="24px" height="24px" />
                        Retour
                    </div>
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <form action="{{ path('app_admin_user_remove', { id: user.id }) }}" method="delete">
                        <button type="submit" class="btn btn-danger">
                            <div class="d-flex justify-content-between align-items-center" style="width: 110px;">
                                <twig:ux:icon name="fluent:delete-32-filled" width="24px" height="24px" />
                                Supprimer
                            </div>
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
